<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.tnotifications.NotificationsFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvCreateAnnouncementHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Announcement"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAnnouncementTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Announcement Title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etAnnouncementDescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Enter Announcement Description"
        android:inputType="textMultiLine"
        android:gravity="top"/>

    <Button
        android:id="@+id/btnPostAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Announcement"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>


</LinearLayout>